        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "ts-jest": "^27.1.2",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "body-parser": "^1.19.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.2",
        "serve-favicon": "^2.5.0"
    }
