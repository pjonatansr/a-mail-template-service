{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "rootDirs": [
            "./src",
            "./test"
        ],
        "outDir": "./dist",
        "lib": [
            "ES6"
        ],
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/commom/types"
        ],
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "@entities/*": [
                "entities/template/*",
                "entities/group/*",
                "entities/contact/*"
            ],
            "@use_cases/*": [
                "application/use_cases/template/*",
                "application/use_cases/group/*",
                "application/use_cases/contact/*"
            ],
            "@schema/*": [
                "infrastructure/orm/mongoose/schema/template/*",
                "infrastructure/orm/mongoose/schema/group/*",
                "infrastructure/orm/mongoose/schema/contact/*"
            ],
            "@types": [
                "common/types/types"
            ],
            "@errors/*": [
                "common/errors/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
            "@controllers/*": [
                "interfaces/controllers/*"
            ],
            "@repositories/*": [
                "infrastructure/repositories/*"
            ],
            "@mongoose": [
                "infrastructure/orm/mongoose/mongoose"
            ],
            "@mocks/*": [
                "entities/template/__mocks__/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "sourceMap": true
}
