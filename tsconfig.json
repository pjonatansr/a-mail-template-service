{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "ES6"
        ],
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/commom/types"
        ],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@entities/*": [
                "entities/*"
            ],
            "@use_cases/*": [
                "use_cases/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "sourceMap": true
}
